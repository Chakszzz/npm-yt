{
  "source": {
    "include": ["src"],
    "includePattern": ".js$",
    "exclude": ["node_modules"]
  },
  "opts": {
    "destination": "jsdocs",
    "template": "node_modules/ink-docstrap/template",
    "encoding": "utf8"
  },
  "templates": {
    "default": {
      "outputSourceFiles": true,
      "outputSourcePath": true,
      "includeDate": true
    },
    "ink-docstrap": {
      "theme": "slate",
      "syntaxTheme": "dark",
      "linenums": true,
      "includeSource": true,
      "systemName": "@er-npm/scraper Docs",
      "footer": "Copyright Â© 2025 - @er-npm/scraper",
      "dateFormat": "MMMM Do YYYY, h:mm:ss a"
    }
  }
}